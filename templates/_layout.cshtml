<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Writings about software development, metrics and open source.">
  <meta name="author" content="Luke Venediger">
  @if (ValueOrDefault(ViewBag.stopZoom, "false") == "true")
  {
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  }

  <link rel="shortcut icon" type="image/png" href="@ResolveUrl("static/favicon.png")" />
  <link rel="icon" type="image/png" href="@ResolveUrl("static/favicon.png")" />

  <title>Luke Venediger | @Model.page.Title</title>
  <link href="@ResolveUrl("static/css/bootstrap.min.css")" rel="stylesheet" />
  <link href="@ResolveUrl("static/css/bootstrap-theme.min.css")" rel="stylesheet" />
  <link href="@ResolveUrl("static/css/sticky-footer.css")" rel="stylesheet" />
  <link href="@ResolveUrl("static/css/font-awesome.min.css")" rel="stylesheet" />
  <script type="text/javascript" src="@ResolveUrl("static/scripts/jquery-2.0.3.min.js")"></script>
  <script type="text/javascript" src="@ResolveUrl("static/scripts/bootstrap.min.js")"></script>
</head>
<body>

  <div id="wrap">
  <!-- Nav Bar -->
  @Include( "navbar" )
  
  @Include( "jumbotron" )

  <!-- Main Content -->
  @RenderBody()

  <!-- end of wrap -->
  </div>

  <!-- Footer -->
  @Include("footer")
</body>
</html>
